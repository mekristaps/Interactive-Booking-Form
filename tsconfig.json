{
  "compilerOptions": {
      "target": "ES2019",
      "module": "ESNext",
      "moduleResolution": "Node",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": true,
        "noEmit": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
      "baseUrl": "./src/js",
      "paths": {
          "@root/*": ["*"],
          "@helpers": ["helpers/*"],
          "@modules": ["modules/*"]
      },
      "types": ["vite/client", "Node"]
  },
  "exclude": [
      "vendor",
      "node_modules",
      "vite.config.ts"
  ]
}